<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ClienteAPI.Pages.MainPage"
             Title="Mis platos :D">

    <!-- Agregando elementos a la barra superior de la pantalla -->
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Agregar plato" Clicked="OnAddPlatoAsync"/>
    </ContentPage.ToolbarItems>
    <CollectionView x:Name="coleccionPlatosView"
                    SelectionMode="Single"
                    SelectionChanged="OnElementoCambiado"
                    Margin="30,0,30,0">
        <CollectionView.ItemsLayout>
            <LinearItemsLayout Orientation="Vertical" ItemSpacing="20"/>
        </CollectionView.ItemsLayout>   
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Label Text="{Binding Nombre}" FontSize="Medium"/>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>
